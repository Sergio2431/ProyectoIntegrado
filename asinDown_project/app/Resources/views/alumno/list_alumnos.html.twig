{# Plantillla de nuestra aplicacion #}
{% extends 'base.html.twig' %}
{# TITULO #}
{% block title %}
Lista de Alumnos
{% endblock %}
{# CONTENIDO #}
{% block body %}

<table>
<h1>Lista de Alumnos</h1>
<tr class="title">
    <th>Nombre de Usuario</th>
    <th>Contraseña</th>
    <th>Nombre</th>
    <th>Apellidos</th>
    <th>Diversidad</th>
    <th>Telefono</th>
    <th>Dirección</th>
    <th>Correo</th>
</tr>
  {% for almn in Alumno %}

  <tr class="cont">
      <td>{{ almn.username }}</td>
      <td>{{ almn.password }}</td>
      <td>{{ almn.nombre }}</td>
      <td>{{ almn.apellidos }}</td>
      <td>{{ almn.diversidad }}</td>
      <td>{{ almn.telefono }}</td>
      <td>{{ almn.direccion }}</td>
      <td>{{ almn.correo}}</td>
      <td><a href="{{path('updateAlumn',{'username':almn.username})}}">Actualizar</a>
      <td><a href="{{path('deleteAlumn',{'username':almn.username})}}">Borrar</a></td>
  </tr>
  {% endfor %}
</table>
<style>
  h1{text-align: center; margin-top: 5.6%; margin-bottom: 2%;}
  table{background-color: #ebebeb; width: 98%; margin-left: 1%;margin-bottom: 2%;}
  th{text-align: center; background-color: #343A40; color:#fff;padding-top:0.3%; padding-bottom: 0.3%;border: 1px solid #C1C3D1;}
  td{border-bottom: 1px solid #C1C3D1; text-align: center;padding-bottom:0.3%; padding-top: 0.3%; color: #343A40;}
  td a{color: #343A40; text-decoration: none;}
  td a:hover{color: #00368b; text-decoration: none; }
</style>
{% endblock %}
