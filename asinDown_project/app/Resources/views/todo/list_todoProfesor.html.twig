{# Plantillla de nuestra aplicacion #}
{% extends 'base.html.twig' %}
{# TITULO #}
{% block title %}
Lista Profesores
{% endblock %}
{# CONTENIDO #}
{% block body %}
<div class="container">
  <div class="panel-group">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h4 class="panel-title">
          <a data-toggle="collapse" href="#collapse1">Profesores</a>
        </h4>
      </div>
      <div id="collapse1" class="panel-collapse collapse">
        <div class="panel-body"><table>
        <tr class="title">
            <th>Nombre de Usuario</th>
            <th>Contraseña</th>
            <th>Nombre</th>
            <th>Apellidos</th>
            <th>Telefono</th>
            <th>Dirección</th>
            <th>Correo</th>
        </tr>
          {% for pro in profesor_todo %}

          <tr class="cont">
              <td>{{ pro.username }}</td>
              <td>{{ pro.password }}</td>
              <td>{{ pro.nombre }}</td>
              <td>{{ pro.apellidos }}</td>
              <td>{{ pro.telefono }}</td>
              <td>{{ pro.direccion }}</td>
              <td>{{ pro.correo}}</td>
          </tr>
          {% endfor %}
        </table></div>
      </div>
    </div>
  </div>
</div>

