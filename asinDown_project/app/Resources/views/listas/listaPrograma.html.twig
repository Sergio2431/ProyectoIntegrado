{# Plantillla de nuestra aplicacion #}
{% extends 'base.html.twig' %}
{# TITULO #}
{% block title %}
Lista Programa
{% endblock %}
{# CONTENIDO #}
{% block body %}

<div class="container">
  <div class="panel-group">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h4 class="panel-title">
          <a data-toggle="collapse" href="#collapse3">Asignatura</a>
        </h4>
      </div>
      <div id="collapse3" class="panel-collapse collapse">
        <div class="panel-body"><table>
        <tr class="title">
        <th>ID</th>
        <th>Aula</th>
        <th>Nombre Asignatura</th>
        <th>Usuario</th>
        <th>Programa</th>
        <th>Duración</th>
        </tr>

          {% for asig in asignatura_todo %}
          <tr class="cont">
            <td>{{ asig.id }}</td>
            <td>{{ asig.aulas }}</td>
            <td>{{ asig.nombre }}</td>
            <td>{{ asig.usuarios|join(',') }}</td>
            <td>{{ asig.NombrePrograma }}</td>
            <td>{{ asig.duracion }}</td>
        </tr>
          </tr>
          {% endfor %}
          <a href="../nuevaAsignatura">registrar</a>

        </table></div>
      </div>
    </div>
  </div>
</div>
<div class="container">
  <div class="panel-group">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h4 class="panel-title">
          <a data-toggle="collapse" href="#collapse1">Aula</a>
        </h4>
      </div>
      <div id="collapse1" class="panel-collapse collapse">
        <div class="panel-body"><table>
        <tr class="title">
            <th>ID</th>
            <th>Número de Aula</th>
        </tr>
          {% for au in aula_todo %}

          <tr class="cont">
              <td>{{ au.id }}</td>
              <td>{{ au.numAula }}</td>
          {% endfor %}
          <a href="../nuevaAula">registrar Aula</a>
        </table></div>
      </div>
    </div>
  </div>
</div>
<div class="container">
  <div class="panel-group">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h4 class="panel-title">
          <a data-toggle="collapse" href="#collapse2">Programas</a>
        </h4>
      </div>
      <div id="collapse2" class="panel-collapse collapse">
        <div class="panel-body"><table>
        <tr class="title">
            <th>ID</th>
            <th>Nombre Programa</th>
            <th>Nombre Usuario</th>
            <th>Duración</th>
            <th>Dirección</th>
            <th>Horario</th>
            <th>Tipo de Usuarios</th>

        </tr>
          {% for prog in programa_todo %}

          <tr class="cont">
              <td>{{ prog.id }}</td>
              <td>{{ prog.nombre }}</td>
              <td>{{ prog.usuarios|join(',') }}</td>
              <td>{{ prog.duracion }}</td>
              <td>{{ prog.direccion }}</td>
              <td>{{ prog.horario }}</td>
              <td>{{ prog.usuarios|join(',') }}</td>
          </tr>
          {% endfor %}
          <a href="../nuevoPrograma">Registrar Programa</a>
        </table></div>
      </div>
    </div>
  </div>
</div>

{% endblock %}
